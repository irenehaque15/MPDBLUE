
  <div style="height:100%;">
      <div style="float:left;" >
          <img class="backButton" src="/images/black-steel-arrow-back.png" id="nextButton" onClick="showLightbox(-2)">
      </div>

      <div style="float:left; width:15%; margin-right:35px;">
          <%= content_tag :div, :class => "thumbwrapper" do %>
              <%= image_tag @portfolio.images.first.path, :class => "imgtag-title" %>
          <% end %>
          <div class="portfolio-name">
              <%= @portfolio.name %>
          </div>
      </div>

      <div style="float:left; width:50%; height:98%; margin-right:15px;">
          <%= content_tag :div, :id => 'mainPortfolioImg', :class => "thumbwrapper-main" do %>
              <%= image_tag @portfolio.images.first.path, :class => "imgtag-main" %>
          <% end %>
          <div id="mainPortfolioImgCaption" style="height:20%; text-align:justify; font-size:15px; color:grey; margin-left:10px; margin-right:25px; overflow:auto; float:left;">
              <%=  @portfolio.images.first.caption %>
          </div>
      </div>

      <div style="float:left; width:14%; height:96%; overflow:auto; margin-top:10px; margin-right:15px;">
           <% @portfolio.images.each do |image| %>
              <%= content_tag :div, :id => image.name, :class => "thumbwrapperPopUp" do %>
                  <%= image_tag(image.path, :id => image.path, :class => "imgtagPopUp", :name => image.caption, :onClick => "onClickImgHandler(this)") %>
              <% end %>
          <% end %>
      </div>
    
      <div style="float:left;">
          <div style="float:right;">
              <img id="closeButton" class="closeButton" src="/images/x.png" onClick="hideLightbox()"/>
          </div>
          <div style="float:right;">
              <img class="nextButton" src="/images/black-steel-arrow-forward.png" id="nextButton" onClick="showLightbox(-1)"/>
          </div>
      </div>
  </div>
