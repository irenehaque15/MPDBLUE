<script src="/javascripts/jquery.js" type="text/javascript"></script>
<link href="/stylesheets/facebox.css" media="screen" rel="stylesheet" type="text/css"/>
<script src="/javascripts/facebox.js" type="text/javascript"></script>
<script type="text/javascript"> 
	jQuery(document).ready(function($) {
			$('a[rel*=facebox]').facebox() 
			})
</script> 


<h1><%= @team.name %></h1>

<table id ="box-table-a">
	<thead><tr>
			<th scope = "col" id="name">Student</th>
			<th scope = "col" id="email">Email Address</th>
			<th scope = "col" id="edit">Edit</th>
			<th scope = "col" id="delete">Delete</th>
		</tr>
	</thead>
	<tbody>
		<% @team.students.each do |student| %>
			<tr>
				<td><%= student.firstname %> <%= student.lastname %></td>
				<td><%= student.email %></td>
				<td><%= link_to "Edit", edit_student_path(student), :rel => "facebox" %></td>
				<td><%= link_to "Delete", "/students/delete/"+student.id.to_s, :rel => "facebox" %></td>
			</tr>
		<% end %>
	</tbody>
	<tfoot>
		<tr><td><%= link_to "Add New Student to "+@team.name.to_s+" Team", "/students/new/"+@team.id.to_s, :rel => "facebox" %></td><td></td><td></td><td></td></tr>
	</tfoot>

</table>


